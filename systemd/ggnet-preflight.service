[Unit]
Description=GGnet Pre-flight System Checks
Documentation=https://github.com/your-org/ggnet
Before=ggnet-backend.service
After=network.target postgresql.service redis.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/ggnet
ExecStart=/usr/bin/python3 /opt/ggnet/backend/scripts/preflight.py
RemainAfter=yes
StandardOutput=journal
StandardError=journal
TimeoutSec=60

# Restart policy
Restart=no

[Install]
WantedBy=multi-user.target

